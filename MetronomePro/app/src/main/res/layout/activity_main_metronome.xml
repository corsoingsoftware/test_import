<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/metronome_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a5dbf5"
        android:orientation="vertical"

        tools:context="a2016.soft.ing.unipd.metronomepro.MainMetronome">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <!--android:background="#2ca5e0"!-->

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/play"
                android:text="PLAY"
                android:textSize="40sp"
                android:background="@drawable/play"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:layout_alignBottom="@+id/grid1"
                android:layout_centerHorizontal="true"
                android:soundEffectsEnabled="false"/>


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/play"
                android:id="@+id/grid2"
                android:columnCount="8">

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/meno_10"
                    android:background="@drawable/generic_btn"
                    android:text="-10"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:longClickable="true"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginLeft="15dp"/>

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/piu_10"
                    android:background="@drawable/generic_btn"
                    android:text="+10"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:longClickable="true"
                    android:layout_row="0"
                    android:layout_column="7"
                    android:layout_marginRight="15dp"/>

                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/meno_1"
                    android:background="@drawable/generic_btn"
                    android:text="-1"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:longClickable="true"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_marginLeft="25dp"/>

                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/piu_1"
                    android:background="@drawable/generic_btn"
                    android:text="+1"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:longClickable="true"
                    android:layout_row="0"
                    android:layout_column="6"
                    android:layout_marginRight="25dp"/>
            </GridLayout>

            <TextView
                android:text="bpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bpmText"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="11dp"
                android:layout_alignBaseline="@+id/shownText"
                android:layout_alignBottom="@+id/shownText"
                android:layout_toEndOf="@+id/shownText" />




            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/grid1"
                android:layout_marginTop="300dp"
                android:layout_marginBottom="10dp">
                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/generic_btn"
                    android:text="RESET"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:id="@+id/resetBtn"
                    android:layout_marginLeft="15dp" />


                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/search"
                    android:id="@+id/hiddenBtn"
                    android:layout_marginRight="15dp"
                    android:layout_row="0"
                    android:layout_column="15"
                    android:visibility="invisible"/>

                <Button
                    android:text=""
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/generic_btn"
                    android:id="@+id/metricBtn"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:layout_marginRight="15dp"/>
            </GridLayout>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shownText"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="70sp"
                android:textStyle="bold"
                android:layout_marginLeft="165dp"
                android:layout_above="@+id/grid2"
                android:layout_centerHorizontal="true" />


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup"
                android:layout_marginLeft="15dp"
                android:layout_alignTop="@id/shownText">


                <RadioButton
                    android:id="@+id/radioWave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Onda"
                    android:layout_alignBottom="@+id/bpmText"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp">
                </RadioButton>

                <RadioButton
                    android:id="@+id/radioClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tick Tock"
                    android:layout_above="@+id/bpmText"
                    android:layout_alignStart="@+id/radioWave">
                </RadioButton>
            </RadioGroup>




            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay"
                android:visibility="invisible"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary">

                </android.support.v7.widget.Toolbar>

                <android.support.design.widget.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.AppBarLayout>

            <Button
                android:text="Manage Playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/manage_playlist"
                android:layout_weight="1"
                android:minWidth="18dip"
                android:minHeight="34dp"
                android:textSize="12sp"
                android:layout_above="@+id/shownText"
                android:layout_alignEnd="@+id/play"
                android:onClick="sendMessage"
                android:layout_marginBottom="31dp" />


        </RelativeLayout>

    </FrameLayout>


