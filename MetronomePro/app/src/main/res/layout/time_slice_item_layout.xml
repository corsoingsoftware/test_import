<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:paddingBottom="@dimen/item_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/item_vertical_margin"
    android:layout_height="wrap_content">

    <TextView
        android:text="BIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bit_text_view"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="BPM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bpm_text_view"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:padding="@dimen/default_item_padding"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="4/4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/metric_text_view"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/handle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@mipmap/ic_handler"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_above="@+id/bpm_text_view"
        android:layout_alignParentStart="true" />

</RelativeLayout>