<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_playlist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="a2016.soft.ing.unipd.metronomepro.select_playlist">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/body_playlist">
        <Spinner
            android:id="@+id/playlistspinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentLeft="true">
        </Spinner>
        <Button
            android:id="@+id/newPlaylist"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:background="@drawable/plus2"
            android:layout_toRightOf="@id/playlistspinner"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/body_playlist"
        android:gravity="center">

        <Button
            android:id="@+id/searchSlave"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/searchslave"/>
        <Button
            android:id="@+id/searchMaster"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_toRightOf="@id/searchSlave"
            android:background="@drawable/home"/>
    </RelativeLayout>

</RelativeLayout>
